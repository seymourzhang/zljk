     */
	List<PageData> getList(PageData pd) throws Exception {
		List<PageData> mcl;
		if(pd.get("farmId")!=null || pd.get("houseId")!=null) {
			mcl = monitorService.selectByCondition(pd);
		} else {
			mcl = monitorService.selectAll();
		}
		return mcl;
	}

